# Prompt Harvester Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/prompt_harvester

# Cloudflare R2 Storage (for large conversation storage)
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY=your_access_key
R2_SECRET_KEY=your_secret_key
R2_BUCKET_NAME=prompt-harvester

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=optional_api_key

# Embedding Configuration
EMBEDDING_MODE=cloud  # Options: cloud, local
OPENAI_API_KEY=sk-...  # Required if EMBEDDING_MODE=cloud

# Summary Generation (Phase 5)
SUMMARY_MODE=local  # Options: cloud, local
OLLAMA_URL=http://localhost:11434  # Required if SUMMARY_MODE=local
SUMMARY_MODEL=qwen2.5:7b  # Model name for local summaries

# Backup Configuration
BACKUP_PATH=./backups
BACKUP_RETENTION_DAILY=7
BACKUP_RETENTION_WEEKLY=4
BACKUP_RETENTION_MONTHLY=12

# API Server
API_PORT=3000
API_HOST=localhost
API_CORS_ORIGIN=http://localhost:5173  # For dashboard development

# Dashboard
DASHBOARD_PORT=5173

# MCP Server
MCP_SERVER_LOG_LEVEL=info

# Feature Flags
ENABLE_SEMANTIC_SEARCH=true
ENABLE_NLP_TOPICS=true
ENABLE_RELATIONSHIP_MAPPING=true
ENABLE_AUTO_SUMMARIES=false  # Phase 5 feature

# Performance
BATCH_SIZE=100  # For embedding batch processing
MAX_CONCURRENT_EMBEDDINGS=5
SEARCH_RESULTS_LIMIT=50

# Logging
LOG_LEVEL=info  # Options: debug, info, warn, error
LOG_FILE=./logs/prompt-harvester.log
