{
  "name": "prompt-harvester",
  "version": "1.0.0",
  "description": "Multi-source AI conversation mining and semantic search system",
  "type": "module",
  "scripts": {
    "dev": "bun run api-server.ts",
    "start": "bun run api-server.ts",
    "parse": "bun run claude-code-parser.ts",
    "parse:stats": "bun run claude-code-parser.ts --stats",
    "db:setup": "psql -d prompt_harvester -f schema.sql",
    "db:reset": "dropdb prompt_harvester && createdb prompt_harvester && bun run db:setup",
    "embeddings:batch": "bun run src/scripts/batch-embeddings.ts",
    "mcp:server": "bun run mcp-server/server.ts",
    "dashboard:dev": "cd dashboard && npm run dev",
    "dashboard:build": "cd dashboard && npm run build",
    "test": "bun test",
    "format": "prettier --write '**/*.{ts,js,json,svelte}'",
    "lint": "eslint src/**/*.ts"
  },
